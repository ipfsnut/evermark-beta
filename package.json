    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.6.2",
    "sharp": "^0.34.3",
    "thirdweb": "^5.101.1",
    "viem": "^2.21.54",
    "wagmi": "^2.15.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@netlify/functions": "^2.8.0",
    "@types/date-fns": "^2.5.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.21",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
