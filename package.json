{
  "name": "evermark-beta",
  "private": true,
  "version": "0.0.1",
  "description": "Evermark Beta - Content curation & collective memory",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "build:force": "TSC_COMPILE_ON_ERROR=true tsc --noEmit && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 500",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "migrate:legacy": "npx tsx fix-legacy-evermarks.ts",
    "migrate:dry": "DRY_RUN=true npx tsx fix-legacy-evermarks.ts"
  },
