# Environment Configuration for Evermark Beta with Unified Storage
# Copy this file to .env and fill in your values

# Core Application
VITE_APP_NAME=Evermark Beta
VITE_APP_VERSION=0.0.1

# Blockchain Configuration
VITE_THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here
VITE_CHAIN_ID=8453
VITE_EMARK_TOKEN_ADDRESS=0xYourEmarkTokenAddress
VITE_CARD_CATALOG_ADDRESS=0xYourCardCatalogAddress
VITE_EVERMARK_NFT_ADDRESS=0xYourEvermarkNFTAddress
VITE_EVERMARK_VOTING_ADDRESS=0xYourVotingAddress
VITE_EVERMARK_LEADERBOARD_ADDRESS=0xYourLeaderboardAddress

# Database Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (Server-side only, keep secret)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# IPFS Storage (Pinata)
VITE_PINATA_JWT=your_pinata_jwt_token_here
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_api_key_here

# ArDrive Storage (NEW) - SERVER SIDE ONLY
# NEVER use VITE_ prefix for private keys - keeps them server-side only
ARDRIVE_PRIVATE_KEY=your_eth_dev_wallet_private_key_here
ARDRIVE_WALLET_ADDRESS=your_eth_dev_wallet_address_here

# Unified Storage Configuration (NEW)
# Enable ArDrive storage backend
VITE_ARDRIVE_ENABLED=false

# Enable dual storage (upload to both IPFS and ArDrive)
VITE_DUAL_STORAGE=false

# Primary storage backend: 'ipfs', 'ardrive', or 'dual'
VITE_STORAGE_BACKEND=ipfs

# Season Management (NEW)
# Enable season-based folder organization
VITE_SEASON_MANAGEMENT=false

# Cost Estimation (NEW)
# Enable storage cost estimation UI
VITE_COST_ESTIMATION=false

# Farcaster Configuration
VITE_FARCASTER_DEVELOPER_FID=your_farcaster_developer_fid_here
NEYNAR_API_KEY=your_neynar_api_key_here

# Development Configuration
NODE_ENV=development
VITE_DEV_MODE=true

# API Configuration
VITE_API_BASE_URL=http://localhost:8888/.netlify/functions

# Content Security
VITE_CONTENT_SECURITY_POLICY=default-src 'self'; img-src 'self' data: blob: https:; connect-src 'self' https:;

# Feature Flags (DEVELOPMENT ONLY)
# These control experimental features during development
VITE_ENABLE_ADVANCED_SEARCH=false
VITE_ENABLE_BULK_OPERATIONS=false
VITE_ENABLE_METRICS_DASHBOARD=false

# Performance Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_PERFORMANCE_MONITORING=false

# Rate Limiting
VITE_RATE_LIMIT_ENABLED=true
VITE_MAX_REQUESTS_PER_MINUTE=100

# Security
VITE_ENABLE_CONTENT_VALIDATION=true
VITE_MAX_FILE_SIZE_MB=25

# CORS Configuration (for development)
CORS_ORIGIN=http://localhost:3000,http://localhost:8888

# Error Reporting
VITE_ERROR_REPORTING=false
SENTRY_DSN=your_sentry_dsn_here

# Social Media Integration
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# ArDrive Configuration Details (NEW)
# Turbo endpoint for ArDrive uploads
ARDRIVE_TURBO_URL=https://turbo.ardrive.io

# Default ArDrive folder for uploads (optional)
ARDRIVE_DEFAULT_FOLDER_ID=your_default_folder_id_here

# ArDrive gateway for content retrieval
ARDRIVE_GATEWAY_URL=https://arweave.net

# Migration Settings (NEW)
# Enable automatic migration from IPFS to ArDrive
VITE_ENABLE_AUTO_MIGRATION=false

# Backup old content during migration
VITE_MIGRATION_BACKUP=true

# Migration batch size (number of files per batch)
MIGRATION_BATCH_SIZE=50

# Season Oracle Configuration (NEW)
# UTC timezone for season calculations
SEASON_TIMEZONE=UTC

# Grace period for season transitions (hours)
SEASON_TRANSITION_GRACE_HOURS=2

# Enable automatic season transitions
SEASON_AUTO_TRANSITION=true

# Storage Monitoring (NEW)
# Enable storage metrics collection
VITE_STORAGE_METRICS=true

# Metrics retention period (days)
STORAGE_METRICS_RETENTION_DAYS=30

# Alert thresholds
STORAGE_COST_ALERT_THRESHOLD_USD=10.00
STORAGE_ERROR_RATE_THRESHOLD_PERCENT=5.0

# Cache Configuration
VITE_CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE_CRON=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/evermark_test
TEST_SUPABASE_URL=https://test-project.supabase.co
TEST_SUPABASE_ANON_KEY=test_key_here

# Production Overrides
# These values will override the above in production
PROD_VITE_ARDRIVE_ENABLED=true
PROD_VITE_DUAL_STORAGE=true
PROD_VITE_SEASON_MANAGEMENT=true
PROD_VITE_COST_ESTIMATION=true